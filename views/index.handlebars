<div id="mainContent" class="row-xs-12">
   <h1 class="display-3 text-center py-5">News Scraper</h1>
   <div class=" mt-3 text-center">
      <button id="scrape" class="btn btn-primary btn-md mt-3">Scrape News</button>
      <button id="saved" class="btn btn-primary btn-md mt-3 ml-5">Saved News</button>
   </div>
</div>
{{!-- Modal Container for Comments --}}
<div id="myModal" class="modal" tabindex="-1" role="dialog">
   <div class="modal-dialog" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <h5 class="modal-title"></h5>
         </div>
         <div class="modal-body">
            <h5>Comments</h5>
            <div id="modal-comments"></div>
            <div id="modal-form">
               <textarea id="comment-text" name="" id="" cols="55" rows="5" placeholder="Add Comment Here"></textarea>
            </div>
         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button id="add-comment" type="button" class="btn btn-primary">Add Comment</button>
         </div>
      </div>
   </div>
</div>
{{!-- News Container --}}
<div id="news">

</div>